<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1 class="text-center">Add a new baby</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <%= simple_form_for [:account, @baby] do |f| %>
        <%= f.input :firstname %>
        <%= f.input :lastname %>
        <%= f.input :age %>
        <%= f.input :gender %>
        <%= f.input :origin %>
        <%= f.input :location %>
        <%= f.input :price %>
        <%= f.input :description %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>


